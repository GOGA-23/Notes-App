<div class="container-fluid container-fluid-custom pb-5 mb-3">
  <div class="row mb-3 mx-5 my-5">
    <div class="col">
      <h1>Hey, <%= userName %></h1>
    </div>
    <div class="col text-end">
      <a href="/dashboard/add" class="btn btn-success fs-6 fw-bolder"
        >+ New Note</a
      >
    </div>
  </div>
  <div class="row mx-3">
    <% if (notes.length > 0) { for(var i=0; i < notes.length; i++) { %>
    <div class="col-lg-3 col-md-4 col-sm-4 col-6 mb-4 overflow-hidden">
      <div
        class="card border-dark border-3 bg-primary w-lg-75"
        style="height: 200px"
      >
        <a
          href="/dashboard/item/<%= notes[i]._id %>"
          class="card-body text-decoration-none"
        >
          <h5 class="card-title text-white"><%= notes[i].title %></h5>
          <p class="card-text text-white"><%= notes[i].body %></p>
        </a>
      </div>
    </div>
    <% }} else { %>
    <div class="row">
      <div class="col-3">
        <img
          src="/img/human-3.svg"
          alt="Human pointing hand toward a create button"
        />
      </div>
      <div class="col mt-md-4">
        <h2>Okay...</h2>
        <h4>
          Let's start with your first note!<br /><br />
          <a href="/dashboard/add">Create one!</a>
        </h4>
      </div>
    </div>
    <% } %>
  </div>
</div>
